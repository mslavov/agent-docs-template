{
  "name": "Agent Documentation Template",
  "description": "A structured documentation template system designed for AI-assisted software development",
  "version": "1.0.0",
  "type": "documentation-template",
  "customInstructions": "Always follow the documentation guidelines in CLAUDE.md. Start by reading docs/RULES.md and docs/INDEX.md before any task. Use the Pre-Task and Post-Task protocols defined in CLAUDE.md.",
  "preferences": {
    "codeStyle": {
      "comments": "minimal",
      "documentation": "comprehensive",
      "naming": "descriptive"
    },
    "workflowPreferences": {
      "taskManagement": "always use docs/progress.md for tracking",
      "documentationUpdates": "real-time",
      "singleSourceOfTruth": true
    }
  },
  "context": {
    "entryPoints": [
      "CLAUDE.md",
      "docs/INDEX.md",
      "docs/RULES.md"
    ],
    "keyDocuments": [
      "docs/system-overview.md",
      "docs/progress.md",
      "docs/task-archive.md"
    ],
    "ignorePaths": [
      "node_modules/",
      ".git/",
      "dist/",
      "build/"
    ]
  },
  "tools": {
    "mcp": {
      "servers": {
        "supabase": {
          "command": "npx",
          "args": ["@modelcontextprotocol/server-supabase", "start"],
          "env": {
            "SUPABASE_URL": "${SUPABASE_URL}",
            "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}"
          },
          "enabled": false,
          "description": "Enable this when using Supabase in your project"
        }
      }
    }
  },
  "templates": {
    "documentation": {
      "INDEX.md": "Central navigation hub - customize with project details",
      "system-overview.md": "Comprehensive system architecture template",
      "api-reference.md": "API documentation template",
      "database-reference.md": "Database schema documentation template"
    }
  },
  "workflows": {
    "preTask": [
      "Read docs/RULES.md",
      "Review docs/INDEX.md",
      "Identify relevant documentation from Quick Task Lookup",
      "Consult product and technical references as needed"
    ],
    "postTask": [
      "Update single source of truth for changed information",
      "Update cross-references for new relationships",
      "Mark task completion in docs/progress.md",
      "Update docs/INDEX.md if new documents created",
      "Archive completed tasks to docs/task-archive.md"
    ]
  },
  "projectStructure": {
    "documentation": {
      "path": "docs/",
      "description": "All project documentation",
      "subdirectories": {
        "product": "Product requirements and specifications",
        "tech": "Technical documentation and references"
      }
    },
    "guidelines": {
      "AGENTS.md": "Universal AI agent guidelines",
      "CLAUDE.md": "Claude-specific guidelines"
    }
  }
}